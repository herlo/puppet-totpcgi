[secret]
encrypt_secret = <%= @encrypt_secret %>
window_size = <%= @window_size %>
rate_limit = <%= @rate_limit %>
scratch_tokens_n = <%= @scratch_tokens_n %>
bits = <%= @bits %>
totp_user_mask = <%= @totp_user_mask %>
action_url = <%= @action_url %>
css_root = <%= @css_root %>
templates_dir = <%= @templates_dir %>
trust_http_auth = <%= @trust_http_auth %>

[pincode]
usehash = <%= @pincode_usehash %>
makedb = <%= @pincode_makedb %>

[secret_backend]
engine = <%= @secret_engine %>
<% if @secret_engine == 'file' -%>
secrets_dir = <%= @secret_secrets_dir %>
<% end -%>
<% if @secret_engine == 'pgsql' -%>
pg_connect_string = <%= @secret_pg_connect_string %>
<% end -%>

<% if @secret_engine == 'mysql' -%>
mysql_connect_host = <%= @secret_mysql_connect_host %>
mysql_connect_user = <%= @secret_mysql_connect_user %>
mysql_connect_password = <%= @secret_mysql_connect_password %>
mysql_connect_db = <%= @secret_mysql_connect_db %>
<% end -%>

[pincode_backend]
engine = <%= @pincode_engine %>
<% if @secret_engine == 'file' -%>
pincode_file = <%= @pincode_pincode_file %>
<% end -%>
<% if @pincode_engine == 'pgsql' -%>
pg_connect_string = <%= @pincode_pg_connect_string %>
<% end -%>
<% if @pincode_engine == 'mysql' -%>
mysql_connect_host = <%= @pincode_mysql_connect_host %>
mysql_connect_user = <%= @pincode_mysql_connect_user %>
mysql_connect_password = <%= @pincode_mysql_connect_password %>
mysql_connect_db = <%= @pincode_mysql_connect_db %>
<% end -%>
<% if @pincode_engine = 'ldap' -%>
ldap_url    = <%= @pincode_ldap_url %>
ldap_dn     = <%= @pincode_ldap_dn %>
ldap_cacert = <%= @pincode_ldap_cacert %>
<% end -%>

[state_backend]
engine = <%= @state_engine %>
<% if @state_engine == 'file' -%>
state_dir = <%= @state_state_dir %>
<% end -%>
<% if @state_engine == 'pgsql' -%>
pg_connect_string = <%= @state_pg_connect_string %>
<% end -%>
<% if @state_engine == 'mysql' -%>
mysql_connect_host = <%= @state_mysql_connect_host %>
mysql_connect_user = <%= @state_mysql_connect_user %>
mysql_connect_password = <%= @state_mysql_connect_password %>
mysql_connect_db = <%= @state_mysql_connect_db %>
<% end -%>

